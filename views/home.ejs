      integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p"
      crossorigin="anonymous"
    />
    <script src="https://unpkg.com/feather-icons"></script>

    <!-- sweet alerts -->
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
      body {
        font-family: "Montserrat", sans-serif;
      }

      .card {
        position: relative;
        z-index: 1;
        background: #ffffff;
        box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2),
          0 5px 5px 0 rgba(0, 0, 0, 0.24);
      }

      .pointer {
        cursor: pointer;
      }

      .text-green {
        color: #198754;
      }
    </style>

    <!-- Custom styles for this template -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css"
    />
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <nav
          id="sidebarMenu"
          class="col-md-3 col-lg-2 d-md-block bg-gradient sidebar collapse bg-primary"
          style="height: 1080px;"
        >
          <div class="position-sticky pt-3">
            <ul class="nav flex-column">
              <li class="nav-item">
                <a
                  class="nav-link text-dark"
                  aria-current="page"
                  href="/immigration-dept/home"
                >
                  <span data-feather="home"></span>
                  Dashboard
                </a>
              </li>
            </ul>
          </div>
          <div class="position-sticky pt-3 mt-5">
            <ul class="nav flex-column">
              <p class="text-light m-3">HELP</p>
              <li class="nav-item">
                <a
                  class="nav-link text-light"
                  aria-current="page"
                  href="/immigration-dept/home"
                >
                  <span data-feather="home"></span>
                  Raise a ticket
                </a>
              </li>
              <li class="nav-item">
                <a
                  class="nav-link text-light"
                  aria-current="page"
                  href="/immigration-dept/home"
                >
                  <span data-feather="home"></span>
                  FAQs
                </a>
              </li>
            </ul>
          </div>
          <div class="position-sticky pt-3" style="margin-top: 200px;">
            <ul class="nav flex-column">
              <p class="text-light m-3">SETTINGS</p>
              <li class="nav-item">
                <a
                  class="nav-link text-light"
                  aria-current="page"
                  href="/immigration-dept/home"
                >
                  <span data-feather="home"></span>
                  Profile
                </a>
              </li>
              <li class="nav-item">
                <a
                  class="nav-link text-light"
                  style="cursor: pointer;"
                  aria-current="page"
                  onclick="logOut()">
                  Log Out
                </a>
              </li>
            </ul>
          </div>
        </nav>

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 pt-3" id="body">
          <div class="p-5">
            <h3 class="font-weight-bold">Welcome,</h3>
            <h3 class="font-weight-bold"></h3>
            <form action="/form" enctype="multipart/form-data" method="post">
              <img
                src="/images/profile.jpg"
                class="img-fluid"
                alt="Responsive image"
              />
              <h3 class=" mt-5">
                Kindly help us with the following information
              </h3>
              <input type="hidden" name="userId">
              <div class="row">
                <div class="col-4">
                  <input
                    type="text"
                    class="form-control required"
                    placeholder="Full Name"
                    name="fullName"
                    required
                  />
                </div>
                <div class="col-4">
                  <input
                    type="email"
                    class="form-control required"
                    placeholder="Email ID"
                    name="emailID"
                    required
                  />
                </div>
              </div>
              <div class="row pt-4">
                <div class="col-4">
                  <input
                    type="number"
                    class="form-control required"
                    placeholder="Mobile Number"
                    name="mobileNumber"
                    required
                  />
                </div>
                <div class="col-4">
                  <select class="form-select" name="nationality" required>
                    <option selected>Open this select menu</option>
                    <option value="Indian">Indian</option>
                    <option value="Foreigner">Foreigner</option>
                  </select>
                </div>
              </div>
              <div class="row mt-5">
                  <div class="col-8 p-4" style="border: 5px dashed black;">
                      Add your Aadhaar Front (.pdf, .jpg, .png)
                      <input
                      type="file"
                      class="form-control-file"
                      name="aadhaar"
                      required
                    />
                  </div>
              </div>
              <button type="submit" class="btn btn-primary mt-4">Submit</button>
            </form>
          </div>
        </main>
      </div>
    </div>
    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
      integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
      integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
      crossorigin="anonymous"
    ></script>
  </body>
  <script src="javascripts/formsubmit.js"></script>
  <script>
    (function () {
      "use strict";

      $("input[name='userId']").val(window.localStorage.getItem("userId"));

      var forms = document.querySelectorAll(".needs-validation");

      Array.prototype.slice.call(forms).forEach(function (form) {
        form.addEventListener(
          "submit",
          function (event) {
            if (!form.checkValidity()) {
              event.preventDefault();
              event.stopPropagation();
            }
            form.classList.add("was-validated");
            formSubmit();
          },
          false
        );
      });
    })();
  </script>
</html>
